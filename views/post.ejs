<%- include("partials/header"); -%>


<h1 id="blogTitle"><%=title%></h1>

<p id="blogContent"><%=content%></p>

<h3>Blog ID:</h3>
<h3 id="blogiD"><%=postId%></h3>

<button type="button" onclick="myFunction()" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">EDIT</button>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
  
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
       
      </div>
      <div class="modal-body">
        <form class="" action="/update" method="POST">
            <div class="form-group">
                <label>Blog ID</label>
                <input readonly id="upBlog" class="form-control" type="text" name="titleId">
                <label>Title</label>
                <input id="upTitle" class="form-control" type="text" name="titleToBeUpdated">
                <label>Content</label>
                <textarea id="myTextarea" class="form-control" name="contentToBeUpdated" rows="5" cols="30"></textarea>
            </div>
            <div class="btn-group ml-2" role="group" aria-label="Basic example">
           
                <button class="btn btn-primary" type="submit" name="button">Update</button>
              
              </div>
          
        </form>
        


      </div>
     
    </div>
    
  </div>
</div>

<script>
        function myFunction() {
            var x = document.getElementById("blogTitle").innerHTML;
            document.getElementById("upTitle").value = x;
            var y = document.getElementById("blogContent").innerHTML;
            document.getElementById("myTextarea").value = y;
            var z = document.getElementById("blogiD").innerHTML;
            document.getElementById("upBlog").value = z;
        }
    

</script>



